<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
            <h3>Create a New Listing</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <lable for="title" class="form-lable">Title</lable>
                <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
                <div class="valid-feedback">
                    Title looks good!
                </div>
            </div>
            <div class="mb-3">
                <lable for="description" class="form-lable">Description</lable>
                <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required></textarea> 
                <div class="invalid-feedback">
                    Please enter a short description
                </div>
            </div>
            
            <div class="mb-3">
                <lable for="image" class="form-lable">Upload Listing image</lable>
                <input name="listing[image]"  type="file"  class="form-control" required />
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-lable">Price</lable>
                    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required/>
                    <div class="invalid-feedback">
                        Please enter a vaild Price
                    </div>
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-lable">Country</lable>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
                <div class="invalid-feedback">
                    Please enter a vaild country name
                </div>
            </div>
            
            
            <div class="mb-3">
                <lable for="location" class="form-lable">Location</lable>
                <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required />
                <div class="invalid-feedback">
                    Please enter a vaild location
                </div>
            </div>

            <button class="btn btn-dark add-btn">Add</button>

            <br><br>
        </form>
    </div>
</div>


